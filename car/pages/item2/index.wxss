/* pages/section/item2.wxss */
.guide{width: 100%;margin-bottom:10rpx;}
.guide image{width: 100%}
.form-group{margin: 0;}
#form{
  margin: 0;
  border: none;
  padding:0 20rpx 10rpx 20rpx;
}
#form button{margin-top: 10px;}
.address{font-size: 25rpx;color:#999;margin: 5px 15px;}
.address text{width: 100%;display: block;line-height: 38rpx;}

page{
  background: #f5f5f5;
  padding-bottom:60rpx;
}
/*上传图片  */ 
.addimg{
  border:1rpx solid #eee;
  padding:0 20rpx;
  border-radius: 10rpx;
}
.addimg .title .pull-right{
  font-size:24tpx;
}
.addimg .title .pull-right.delvideo{
  color:red;
}

.addimg .com {
  display: inline-block;
}
.addimg .com view{
  display: inline-block;
  width:150rpx;
  height:150rpx;
  margin-right:20rpx;
  position: relative;
}
/*删除按钮  */
.addimg .com view text{
  position:absolute;
  line-height: 1;
  padding:8rpx 10rpx;
  background: red;
  top:0;
  left:0;
  color:#fff;
  font-size:28rpx;
}
/*上传后片图尺寸  */
.addimg .com image{
  width:150rpx;
  height:150rpx;
  display: block;
  margin:0 auto;
}
/* /上传后的视屏 */
 
.addimg .vd .addicon image{
  width:150rpx;
  height:150rpx;
}

.addimg .com view.video{
  width:100%;
}
video{
  width:100%;
  height:500rpx;
}
#form .addimg .com button{
  font-size:30rpx;
  color:#777;
  line-height: 80rpx;
  border-color:#e1e1e1;
   margin:0 0 20rpx 0;
}

.addimg .com button image{
  width:40rpx;
  height:40rpx;
  display:inline-block;
  vertical-align:middle;
  margin-bottom:6rpx;
}
/*支付底部导航  */
.pay{
  display: flex;
  display:-webkit-flex;
  position: fixed;
  bottom:0;
  width:100%;
  left:0;
}
.pay .money{
  width:30%;
  background: #fff;
  text-align: center;
  line-height: 100rpx;
  color:#129FE7;
  font-size:40rpx;
}
.pay .money text{
  font-weight: 800;
}
.pay .money .cont{
  margin-top:20rpx;
}
.pay .money text{
  font-weight: 800;
  line-height: 1;
  display: block;
}
.pay .money text:last-child{
  color:#999;
  font-size:24rpx;
  font-weight: normal;
}
#form .pay button{
  width:70%;
  margin:0;
  border:none;
}