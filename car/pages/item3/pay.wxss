/* pages/section/pay.wxss */
@import "../../res/icon.wxss";
.clear{
  background: #fff;
  padding:30rpx 20rpx;
  position: relative;
}
.clear .pull-left{
  width:calc(100% - 160rpx);
}
.clear .pull-left view{
  font-size:32rpx;
  display: flex;
  display: -webkit-flex;
}
.clear .pull-left view image{
  width:50rpx;
  height:50rpx;
  display:block;
  margin-right:20rpx;
}
.clear .pull-right{
  position: absolute;
  right:30rpx;
  top:calc(50% - 40rpx);
  font-size:50rpx;
  color:#129FE7;
  font-weight: bold;
}
/* /个人信息 */
.info{
  margin-top:20rpx;
  background: #fff;
}
.info view.com{
  padding:20rpx;
  font-size:28rpx;
  display: flex;
  align-items:center;
}
.info view i{
  margin-right:20rpx;
}
.info .name i{
  color:#129FE7;
}
.info .code i{
  color:#0D59F4;
}
.info .tel i{
  color:#1DC6B7;
}
.info .wtd i{
  color:#1DB2B2;
}
.info .addr i{
  color:#12A3E7;
}
.info .company i{
  color:#12E769;
}
.info .num i{
  color:#DAB513;
}
.need{
  background: #fff;
  margin-top:20rpx;
  padding:20rpx;
}
.need text{
color:#129FE7;
} 
.address{
  padding:20rpx;
  background: #fff;
  font-size:28rpx;
}
.address text{
  display: block;
  color:#129FE7;
}
.foot{
  position: fixed;
  width:100%;
  left:0;
  bottom: 0;
  display: flex;
}
.foot button[disabled][type="primary"]{
  background: #ddd;
  width:100%;
}
.foot button[disabled][type="primary" ][class="pay"]{
  background:#59DF17;
}
.foot button.shouhuo{
  width:100%;
}
button:after{
  border-color:rgba(0,0,0,0.1);
}
.foot view{
  width:30%;
  color:#129FE7;
  font-size:32rpx;
  text-align: center;
  line-height: 92rpx;
  background: #fff;
}
.foot button.toPay{
  width:70%;
}