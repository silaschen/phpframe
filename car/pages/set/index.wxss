/* pages/section/item2.wxss */
.guide{width: 100%;margin-bottom:10rpx;background: #fff;
padding:20rpx;
font-size:32rpx;
font-weight: 600;
}
.form-group{margin: 0;position:relative;}
#form{
  margin: 0;
  border: none;
  padding:0 20rpx 10rpx 20rpx;
}
#form .pay button{margin-top: 10px;}
#form .tel button{
  position:absolute;
  top:5px;
  right:10px;
  padding:0 10rpx;
  border-radius: 3px;
}
#form .tel input{
  width:calc(80% - 80px);
}
.address{font-size: 25rpx;color:#999;margin: 5px 15px;}
.address text{width: 100%;display: block;line-height: 38rpx;}

page{
  background: #f5f5f5;
  padding-bottom:60rpx;
}
/*上传图片  */ 
.addimg{
  border:1rpx solid #eee;
  padding:0 20rpx;
  border-radius: 10rpx;
}
.addimg .title .pull-right{
  font-size:24tpx;
}
.addimg .title .pull-right.delvideo{
  color:red;
}

.addimg .inline-block{
  display: inline-block;
}
.addimg .com view{
  display: inline-block;
  width:150rpx;
  height:150rpx;
  margin-right:20rpx;
  position: relative;
}
/*删除按钮  */
.addimg .com view text{
  position:absolute;
  line-height: 1;
  padding:8rpx 10rpx;
  background: red;
  top:0;
  left:0;
  color:#fff;
  font-size:28rpx;
}
/*上传后片图尺寸  */
.addimg .com image{
  width:150rpx;
  height:150rpx;
  display: block;
  margin:0 auto;
}
/* /上传后的视屏 */
.addimg .com view.video{
  width:100%;
}
video{
  width:100%;
  height:500rpx;
}
#form .addimg .com button{
  font-size:30rpx;
  color:#777;
  line-height: 80rpx;
  border-color:#e1e1e1;
   margin:0 0 20rpx 0;
}

.addimg .com button image{
  width:40rpx;
  height:40rpx;
  display:inline-block;
  vertical-align:middle;
  margin-bottom:6rpx;
}
/*支付底部导航  */
.pay{ 
  margin-top:30rpx;
}

#form .pay button{
  width:100%;
  margin:0;
  border:none;
}